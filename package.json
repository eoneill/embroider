{
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:embroider-build/embroider.git"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "test-packages/*",
      "test-packages/@embroider/*",
      "types/babel-core",
      "types/@babel__traverse",
      "types/broccoli-funnel",
      "types/broccoli-concat",
      "types/ember-cli-htmlbars",
      "tests/scenarios",
      "tests/app-template"
    ],
    "nohoist": [
      "**/@types/broccoli-plugin"
    ]
  },
  "scripts": {
    "clean": "git clean -x -f",
    "compile": "tsc",
    "lint": "eslint . --cache",
    "prepare": "tsc",
    "test": "node ./test-packages/support/suite-setup-util.js --emit && jest"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*",
      "<rootDir>/test-packages/"
    ]
  },
  "resolutions": {
    "**/browserslist": "^4.14.0",
    "**/fastboot": "^3.1.0",
    "**/qunit": "^2.14.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^24.5.0",
    "prettier": "2.1.2",
    "release-it": "^14.2.1",
    "release-it-lerna-changelog": "^3.1.0",
    "release-it-yarn-workspaces": "^2.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "release-it-yarn-workspaces": {
        "workspaces": [
          "packages/*"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "test-packages/*/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "16.3.0",
    "yarn": "1.22.10"
  },
  "version": "0.41.0"
}
